.main-login, .login, .register, .forget-password, .reset-password {
  width: 100%;
  height: 100%;
  background: url('../img/bg.png') no-repeat #232733;
  background-size: cover;
  position: absolute;
}

//main-login
.main-login {
  .top {
    width: 100%;
    height: 40px;
    line-height: 40px;
    span {
      color: #FFF;
      font-size: 14px;
      position: absolute;
      right: 15px;
    }
  }

  .logo {
    margin-top: 116px;
    display: flex;
    flex-direction: column;
    align-items: center;

    img {
      width: 80px;
      height: 70px;
    }
    span {
      margin-top: 15px;
      font-size: 24px;
      color: #ffffff;
    }
  }

  .bottom {
    display: flex;
    flex-direction: column;
    width: 100%;
    position: absolute;
    bottom: 49px;

    .other-login-contain {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 25px 67px;

      .other-login-item {
        display: flex;
        flex-direction: column;
        align-items: center;

        .qq {
          width: 18px;
          height: 20px;
        }
        .wx {
          width: 24px;
          height: 20px;
        }
        .wb {
          width: 25px;
          height: 20px;
        }
        span {
          color: #99969B;
          font-size: 10px;
          margin-top: 7px;
        }
      }
    }

    .register-btn {
      display :block;
      width: 100%
      height: 49px;
      background: #3A4056;
      font-size: 16px;
      color: #ffffff;
      text-align: center;
      line-height: 49px;
      cursor: pointer;
    }

    .login-btn {
      display :block;
      width: 100%
      height: 49px;
      background: #FB7911;
      font-size: 16px;
      color: #ffffff;
      text-align: center;
      line-height: 49px;
      cursor: pointer;
    }
  }
}


.register, .login, .forget-password, .reset-password {
  .title {
    width: 100%;
    height: 45px;
    line-height: 45px;
    padding: 0 15px;
    text-align: center;
    position: relative;
    background: transparent;

    .left {
      width: 45px;
      height: 45px;
      position: absolute;
      top: 0;
      left: 0;
      border: none;
      background: transparent;
      img {
        width: 8px;
        height: 15px;
      }
    }
    .mid {
      color: #ffffff;
      font-size: 16px;
    }
  }

  .content {
    position: absolute;
    top: 128px;
    left: 0;
    width: 100%;
    height: 172px;
    padding: 0 38px;

    .form-group {
      position: relative;
      margin-bottom: 10px;
      height: 40px;
      label {
        font-size: 16px;
        color: #cfd4de;
        width: 70px;
        line-height: 40px;
        display: block;
        float: left;
        font-weight: 500
      }
      .form-control {
        position: absolute;
        top: 0;
        left: 0;
        height: 40px;
        background: none;
        margin: 0;
        padding: 0;
        color: #fff;
        font-size: 16px;
        padding-left: 70px;
        border-radius: 0;
        border-bottom: 1px solid rgb(104, 110, 123);
        &:focus {
          border-bottom: 2px solid #FB7911;
        }
      }
    }
    //register
    .send-code {
      color: #fff;
      font-size: 16px;
      position: absolute;
      right: 38px;
      top: 152px;
      font-weight: 500;
    }
    //login
    .forget-pwd {
      color: #fff;
      font-size: 16px;
      position: absolute;
      left: 38px;
      top: 102px;
      cursor: pointer;
    }
    //login
    .register-txt {
      color: #fff;
      font-size: 16px;
      position: absolute;
      right: 38px;
      top: 102px;
      cursor: pointer;
    }

    :-moz-placeholder {
      color: rgb(104, 110, 123);
    }

    ::-moz-placeholder {
      color: rgb(104, 110, 123);
    }

    input:-ms-input-placeholder {
      color: rgb(104, 110, 123);
    }

    input::-webkit-input-placeholder {
            color: rgb(104, 110, 123);
          }
  }

  .bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 49px;
    outline: 1px solid #0D142F;
    .finish {
      width: 100%;
      height: 49px;
      line-height: 49px;
      text-align: center;
      color: rgb(175, 178, 187);
      font-size: 16px;
      background: rgb(52, 61, 87);
      font-weight: 500;
      cursor: pointer;
    }
    .activate {
      background: #FB7911;
      color: #fff;
    }
  }
}


//login
.login .content .form-group .form-control {
    padding-left: 0;
}

//forget-password
.forget-password .content .send-code {
  top: 100px;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(38, 45, 64, .6);
}

.load-container {
  position: absolute;
  top: calc(50% - 55px);
  left: calc(50% - 55px);
  width: 110px;
  height: 110px;
  border-radius: 4px;
  background: #fff;

  .loader {
    text-align: center;
    padding-top: 25px;
    img {
      width: 40px;
      height: 40px;
    }
  }

  p {
    position: relative;
    text-align: center;
    top: 10px;
    color: #B6BCC7;
    font-weight: bolder;
    font-size: 12px;
  }
}